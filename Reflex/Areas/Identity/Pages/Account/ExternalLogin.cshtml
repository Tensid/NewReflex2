@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrera";
}

<h1>@ViewData["Title"]</h1>
<h4>Koppla ditt @Model.LoginProvider-konto.</h4>
<hr />

<p class="text-info">
    Du har autentiserat dig med <strong>@ViewData["LoginProvider"]</strong>.<br />
    Ange den e-postadress du vill använda och klicka på Registrera-knappen för att slutföra inloggningen.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrera</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
